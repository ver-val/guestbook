{
  "info": {
    "name": "Guestbook API",
    "_postman_id": "guestbook-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/books?q=&page=0&size=10&sort=id,asc",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "books"],
          "query": [
            { "key": "q", "value": "" },
            { "key": "page", "value": "0" },
            { "key": "size", "value": "10" },
            { "key": "sort", "value": "id,asc" }
          ]
        }
      }
    },
    {
      "name": "Book details + comments",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/books/1?page=0&size=5&sort=created_at,desc",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "books", "1"],
          "query": [
            { "key": "page", "value": "0" },
            { "key": "size", "value": "5" },
            { "key": "sort", "value": "created_at,desc" }
          ]
        }
      }
    },
    {
      "name": "Create book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/books",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "books"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"New Book\",\n  \"author\": \"Author Name\",\n  \"description\": \"Optional description\"\n}"
        }
      }
    },
    {
      "name": "Add comment to book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/books/1/comments",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "books", "1", "comments"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"author\": \"Автор 1\",\n  \"text\": \"Коментар\"\n}"
        }
      }
    },
    {
      "name": "Delete comment",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/comments/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "comments", "1"]
        }
      }
    }
  ]
